<%= form_for([:admin, category]) do |f| %>
    <% if category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

          <ul>
            <% category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-lg-6">

        <div class="form-group">
          <%= f.label :title, 'Название' %>
          <%= f.text_field :title, {class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :priority, 'Приоритет' %>
          <%= f.number_field :priority, {class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :product_type_ids, 'Виды изделий' %>
          <%= f.collection_select :product_type_ids, @product_types, :id, :title, {}, {multiple: true, include_blank: 'Пусто', class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :product_ids, 'Товары' %>
          <%= f.collection_select :product_ids, @products, :id, :title, {}, {multiple: true, include_blank: 'Пусто', class: 'form-control'} %>
        </div>

        <div class="actions">
          <%= f.submit 'Применить', class: 'btn btn-default' %>
        </div>

      </div>
    </div>

<% end %>
<br>
