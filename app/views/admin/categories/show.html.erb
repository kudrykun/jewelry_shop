
<div class="row">
  <h1 class="panel-heading"><%= @category.title %></h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>

<div class="row">
  <p>
    <strong>Приоритет:</strong>
    <%= @category.priority %>
  </p>
</div>
<div class="row">
  <%= link_to 'Редактировать', edit_admin_category_path(@category),class: 'btn btn-default' %>
  <%= link_to 'Назад', admin_categories_path, class: 'btn btn-default' %>
</div>
<div class="row mt10">
<%= link_to  new_admin_product_path, class: 'btn btn-success' do %>
    Добавить изделие
    <i class="fa fa-plus"></i>
<% end %>
</div>
<i class="fa fa-refresh fa-spin fa-3x fa-fw" style="display: block; margin: auto"></i>
<div class="row">
  <div class="panel panel-default" style="margin-top: 20px; margin-bottom: 60px; visibility: hidden;" id="table">

    <div class="panel-heading">
      Таблица товаров
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">

      <table  width="100%" class="table table-striped table-bordered table-hover"  id="dataTables-example">
        <thead>
        <tr>
          <th>id</th>
          <th>Название</th>
          <th>Производитель</th>
          <th >Артикул</th>
          <th>Вес</th>
          <th>Цена гр.</th>
          <th>Цена</th>
          <th>%</th>
          <th>Цена %</th>
          <th>Размер</th>
          <th>
            <i class="fa fa-eye fa-2x" aria-hidden="true"  data-toggle="tooltip" data-placement="top" data-original-title="Виден? Поиск: виден"></i>
          </th>
          <th>
            <i class="fa fa-home fa-2x" aria-hidden="true"  data-toggle="tooltip" data-placement="top" data-original-title="На главной? Поиск: главная"></i>
          </th>
          <th>
            <i class="fa fa-picture-o fa-2x" aria-hidden="true" data-toggle="tooltip" data-placement="top" data-original-title="Есть фото? Поиск: фото"></i>
          </th>
          <th>Приор.</th>

          <th class="dt-body-center"></th>
          <th class="dt-body-center"></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tfoot>
        <tr>
          <th>id</th>
          <th>Название</th>
          <th>Производитель</th>
          <th >Артикул</th>
          <th>Вес</th>
          <th>Цена гр.</th>
          <th>Цена</th>
          <th>%</th>
          <th>Цена %</th>
          <th>Размер</th>
          <th>
            <i class="fa fa-eye fa-2x" aria-hidden="true"  data-toggle="tooltip" data-placement="top" data-original-title="Виден? Поиск: виден"></i>
          </th>
          <th>
            <i class="fa fa-home fa-2x" aria-hidden="true"  data-toggle="tooltip" data-placement="top" data-original-title="На главной? Поиск: главная"></i>
          </th>
          <th>
            <i class="fa fa-picture-o fa-2x" aria-hidden="true" data-toggle="tooltip" data-placement="top" data-original-title="Есть фото? Поиск: фото"></i>
          </th>
          <th>Приор.</th>

          <th class="dt-body-center"></th>
          <th class="dt-body-center"></th>
          <th></th>
          <th></th>
        </tr>
        </tfoot>

        <tbody>
        <% @products.each do |product| %>
            <tr <% if (product.visible = false) %>class="opacity-tr"<% end %> >
              <td><%= product.id %></td>
              <td><%= product.title %></td>
              <td>
                <% if product.manufacturer != nil && product.manufacturer.title != '' %>
                    <%= truncate( product.manufacturer.title, length: 16, omission: '..') %>
                <%end%>
              </td>
              <td><%= product.artikul %></td>
              <td><%= product.weight %></td>
              <td><%= product.price_per_gramm %></td>
              <td><%= product.price %></td>
              <td>
                <% if product.sale_size != nil && product.sale_size.sale_percent != '' %>
                    <%= product.sale_size.sale_percent %> %
                <%end%>
              </td>
              <td><%= product.new_price %></td>
              <td style="min-width: 117px;">
                <% if product.shops.size %>
                    <% product.shops.each do |shop|%>
                        <% if product.get_shop_sizes(shop).size%>
                            <div data-toggle="tooltip" data-placement="top" data-original-title="<%=shop.title%>">
                              <%= truncate( shop.title, length: 2, omission: ':') %>
                              <% product.get_shop_sizes(shop).each do |size|%>
                                  <%=size.size%>
                              <%end%>
                            </div>
                        <%end%>
                    <%end%>
                <%end%>
              </td>
              <td>
                <% if product.visible %>
                    Да <span class="hidden">Виден</span>
                <%end%>
              </td>
              <td>
                <% if product.to_main_page %>
                    Да <span class="hidden">главная</span>
                <%end%>
              </td>
              <td>
                <% if product.pictures.size > 0%>
                    Да <span class="hidden">Фото</span>
                <%end%>
              </td>
              <td><%= product.priority %></td>

              <td align="center" style="vertical-align: middle; padding-top: 12px" >
                <%= link_to product_path(product), target: :_blank do %>
                    <i class="fa fa-external-link fa-2x" aria-hidden="true" data-toggle="tooltip" data-placement="top" data-original-title="Открыть в новой вкладке страницу изделия"></i>
                <% end %>
              </td>
              <td align="center" style="vertical-align: middle; ">
                <%= link_to admin_product_path(product) do %>
                    <i class="fa fa-bars fa-2x" aria-hidden="true" data-toggle="tooltip" data-placement="top" data-original-title="Просмотреть всю информацию"></i>
                <% end %>
              </td>
              <td align="center" style="vertical-align: middle">

                <%= link_to edit_admin_product_path(product) do %>
                    <i class="fa fa-pencil-square fa-2x" aria-hidden="true" data-toggle="tooltip" data-placement="top" data-original-title="Редактировать"></i>
                <% end %>

              </td>
              <td align="center" style="vertical-align: middle">
                <%= link_to admin_product_path(product), method: :delete, data: { confirm: 'Вы уверены?' } do %>
                    <i class="fa fa-times fa-2x" style="color: red;" aria-hidden="true" data-toggle="tooltip" data-placement="top" data-original-title="Удалить изделие"></i>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>