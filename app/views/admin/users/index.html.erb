<h1>Пользователи</h1>
<div class="panel panel-default">
  <!--TODO id-->
  <table  width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
    <tr>
      <th>Email</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Входов</th>
      <th>Подтвержден</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.second_name %></td>
          <td><%= user.sign_in_count %></td>
          <td><%= !user.confirmed_at.nil? %></td>
          <td><%= link_to 'Показать', admin_user_path(user) %></td>
          <td><%= link_to 'Удалить', admin_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Создать пользователя', new_admin_user_path %>