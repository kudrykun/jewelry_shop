  <div class="row">
    <% @users.each do |user| %>

    <div class="col-lg-4 col-md-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <i class="fa fa-user"></i> <%= user.first_name %> <%= user.second_name %> (<%= user.email %>)
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="list-group fixed-panel">
            <% user.activity_logs.order(created_at: :desc).each do |log| %>
                <a tabindex="0"
                   class="list-group-item"
                   title="Подробная информация"
                   role="button"
                   data-toggle="popover"
                   data-placement="top"
                   data-trigger="focus"
                   data-content='
                   <ul class="list-group">
                    <li class="list-group-item">Таблица: <a href="/admin/<%= log.controller_name %>"><%= log.entity_name %></a> </li>
                    <% if !log.loggable.nil?%>
                      <li class="list-group-item">Элемент: <%= link_to log.entity_name, [:edit, :admin, log.loggable] %> </li>
                    <% else %>
                      <li class="list-group-item">Элемент: <%= log.entity_name %> </li>
                    <% end %>
                    <li class="list-group-item">IP: <%= log.user_ip %></li>
                    <li class="list-group-item">Время: <%= localize(log.created_at, :format => :short)   %></li>
                    <li class="list-group-item">Действие: <%= log.action %></li>
                  </ul>'>
                  <%= log.note %>
                  <span class="pull-right text-muted small">
                    <em><%= distance_of_time_in_words_to_now(log.created_at) %></em>
                  </span>
                </a>
            <% end %>

          </div>
          <!-- /.list-group -->
          <a href="#" class="btn btn-default btn-block">View All Alerts</a>
        </div>
        <!-- /.panel-body -->
      </div>
    </div>
    <% end  %>
  </div>


    <div class="row">
      <h2>Логи</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <table  width="100%" class="table table-striped table-bordered table-hover" id="simpleDataTable">
            <thead>
            <tr>
              <th>log.note</th>
              <th>log.user_name</th>
              <th>log.user.email</th>
              <th>log.user_ip</th>
              <th>log.action</th>
              <th>log.created_at</th>
              <th>log.entity_name</th>
            </tr>
            </thead>

            <tbody>
            <% @logs.each do |log| %>
                <tr>
                  <td><%= log.note %></td>
                  <td><%= log.user_name %></td>
                  <td><%= log.user.email %></td>
                  <td><%= log.user_ip %></td>
                  <td><%= log.action %></td>
                  <td><%= log.created_at %></td>
                  <td><%= log.entity_name %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
