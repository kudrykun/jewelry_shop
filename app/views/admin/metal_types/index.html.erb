<p id="notice"><%= notice %></p>

<h1>Типы материалов</h1>

<table>
  <thead>
    <tr>
      <th>Нзвание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metal_types.each do |metal_type| %>
      <tr>
        <td><%= metal_type.title %></td>
        <td><%= link_to 'Показать', admin_metal_type_path(metal_type) %></td>
        <td><%= link_to 'Изменить', edit_admin_metal_type_path(metal_type) %></td>
        <td><%= link_to 'Удалить', admin_metal_type_path(metal_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новый материал', new_admin_metal_type_path %>
