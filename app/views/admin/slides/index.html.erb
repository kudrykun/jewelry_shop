<div class="row">
  <h1 class="panel-heading">Слайды главной страницы</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>
<%= link_to new_admin_slide_path, class: 'btn btn-success' do %>
    Добавить слайд
    <i class="fa fa-plus"></i>
<% end %>
<br>
<br>
<div class="panel panel-default">
  <table width="100%" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Изображение</th>
      <th>Приоритет</th>
      <th>Скрыт</th>
      <th>Ссылка</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @slides.each do |slide| %>
        <tr>
          <td>
            <% if !slide.picture.nil? %>
                <%= image_tag (slide.picture.image(:thumb)) %>
            <% end %>
          </td>
          <td><%= slide.priority %></td>
          <td><%= slide.hide %></td>
          <td><%= slide.href %></td>
          <td><%= link_to 'Показать', admin_slide_path(slide) %></td>
          <td><%= link_to 'Изменить', edit_admin_slide_path(slide) %></td>
          <td><%= link_to 'Удалить', admin_slide_path(slide), method: :delete, data: {confirm: 'Вы уверены?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>


