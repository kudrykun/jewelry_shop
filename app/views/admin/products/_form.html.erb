<%= form_for([:admin, product]) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-lg-6">
  <div class="form-group">
    <%= f.label :title, 'Название' %>
    <%= f.text_field :title,{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :artikul, 'Артикул' %>
    <%= f.text_field :artikul,{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :price, 'Цена' %>
    <%= f.text_field :price,{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :metal_color_id, 'Цвет металла' %>
    <%= f.collection_select(:metal_color_id, @metal_colors, :id, :title, {:prompt => 'Пусто'}, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= f.label :weight, 'Вес' %>
    <%= f.text_field :weight,{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :product_type_id, 'Вид изделия' %>
    <%= f.collection_select :product_type_id, @product_types, :id, :title, {:prompt => 'Пусто'}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :sale_size_id, 'Размер скидки' %>
    <%= f.collection_radio_buttons(:sale_size_id, @sale_sizes, :id, :sale_percent) do |b|
      b.label(:"data-value" => b.value, class:'radio-inline') { b.radio_button + b.text.to_s}
      end %>
  </div>

  <div class="form-group">
    <%= f.label :old_price, 'Цена до скидки' %>
    <%= f.text_field :old_price,{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :manufacturer, 'Производитель' %>
    <%= f.text_field :manufacturer,{class: 'form-control'} %>
  </div>

   <div class="form-group">
     <%= f.label :to_main_page, 'На главную' %>
     <%= f.check_box :to_main_page,{class: 'checkbox-inline'} %>
   </div>

  <div class="form-group">
    <%= f.label :priority, 'Приоритет' %>
    <%= f.number_field :priority,{class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.submit 'Применить', class: 'btn btn-default' %>
  </div>

<% end %>
</div>