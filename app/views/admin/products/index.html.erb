<p id="notice"><%= notice %></p>

<h1>Продукты</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Артикул</th>
      <th>Цена</th>
      <th>Цвет металла</th>
      <th>Вес</th>
      <th>Вид изделия</th>
      <th>Размер скидки</th>
      <th>Цена до скидки</th>
      <th>На главную</th>
      <th>Производитель</th>
      <th>Приоритет</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.artikul %></td>
        <td><%= product.price %></td>
        <td><%= product.metal_color.title %></td>
        <td><%= product.weight %></td>
        <td><%= product.product_type.title %></td>
        <td><%= product.sale_size.sale_percent %> %</td>
        <td><%= product.old_price %></td>
        <td><%= product.to_main_page %></td>
        <td><%= product.manufacturer %></td>
        <td><%= product.priority %></td>
        <td><%= link_to 'Показать', admin_product_path(product) %></td>
        <td><%= link_to 'Изменить', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Удалить', admin_product_path(product), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

