<div class="row">
  <h1 class="panel-heading">Виды плетения</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>
<%= link_to 'В товары', admin_chain_types_path, class: 'btn btn-default' %>
<%= link_to  new_admin_chain_type_path, class: 'btn btn-success'  do %>
    Добавить вид плетения
    <i class="fa fa-plus"></i>
<% end %>
<br><br>
<div class="panel panel-default">
  <div class="panel-body">
    <table  width="100%" class="table table-striped table-bordered table-hover" id="simpleDataTable">
      <thead>
      <tr>
        <th>Название</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @chain_types.each do |chain_type| %>
          <tr>
            <td><%= chain_type.title %></td>
            <td><%= link_to 'Показать', admin_chain_type_path(chain_type) %></td>
            <td><%= link_to 'Изменить', edit_admin_chain_type_path(chain_type) %></td>
            <td><%= link_to 'Удалить', admin_chain_type_path(chain_type), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>