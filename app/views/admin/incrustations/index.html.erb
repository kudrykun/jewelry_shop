<div class="row">
  <h1 class="panel-heading">Вставка</h1>
  <p id="notice"><%= notice %></p>
</div>

<%= link_to 'Добавить вставку', new_admin_incrustation_path, class: 'btn btn-success' %><br><br>

<div class="panel panel-default">
  <table class="table table-striped table-bordered table-hover" >
    <thead>
      <tr>
        <th>Название</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @incrustations.each do |incrustation| %>
        <tr>
          <td><%= incrustation.title %></td>
          <td><%= link_to 'Показать', admin_incrustation_path(incrustation) %></td>
          <td><%= link_to 'Изменить', edit_admin_incrustation_path(incrustation) %></td>
          <td><%= link_to 'Удалить', admin_incrustation_path(incrustation), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


