<div class="row">
  <h1 class="panel-heading">Цвета металлов</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>
<%= link_to 'В товары', admin_products_path, class: 'btn btn-default' %>
<%= link_to new_admin_metal_color_path, class: 'btn btn-success'  do %>
    Добавить цвет
    <i class="fa fa-plus"></i>
<% end %>
<br><br>
<div class="panel panel-default">
  <div class="panel-body">
    <table  width="100%" class="table table-striped table-bordered table-hover" id="simpleDataTable">
      <thead>
        <tr>
          <th>Название</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @metal_colors.each do |metal_color| %>
          <tr>
            <td><%= metal_color.title %></td>
            <td><%= link_to 'Показать', admin_metal_color_path(metal_color) %></td>
            <td><%= link_to 'Изменить', edit_admin_metal_color_path(metal_color) %></td>
            <td><%= link_to 'Удалить', admin_metal_color_path(metal_color), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>


