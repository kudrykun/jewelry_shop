<%= form_for([:admin,collection]) do |f| %>
  <% if collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul>
      <% collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-6">

    <div class="field-group">
      <%= f.label :title, 'Название' %>
      <%= f.text_field :title,{class: 'form-control'} %>
    </div>

    <div class="field-group">
      <%= f.label :description, 'Описание' %>
      <%= f.text_area :description,{class: 'form-control',style: 'min-height: 150px'} %>
    </div>

    <div class="field-group">
      <%= f.label :priority, 'Приоритет' %>
      <%= f.number_field :priority,{class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.label :product_ids, 'Товары' %>
      <%= f.collection_select :product_ids, @products, :id, :artikul, {}, {multiple: true,
                                                                           class: 'form-control selectpicker',
                                                                           :"data-live-search" => 'true',
                                                                           :"data-live-Search-Placeholder" => 'Введите артикул',
                                                                           :"title" => 'Выберете артикулы...'} %>
    </div>

    <div class="actions" style="margin-top: 10px">
      <%= f.submit 'Применить', class: 'btn btn-default'%>
    </div>

  </div>
</div>
<% end %>
<br>