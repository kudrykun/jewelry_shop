<p id="notice"><%= notice %></p>

<h1>Коллекции</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.title %></td>
        <td><%= collection.description %></td>
        <td><%= link_to 'Показать', admin_collection_path(collection) %></td>
        <td><%= link_to 'Изменить', edit_admin_collection_path(collection) %></td>
        <td><%= link_to 'Удалить', admin_collection_path(collection), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить коллецию', new_admin_collection_path %>
