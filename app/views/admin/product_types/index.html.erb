<p id="notice"><%= notice %></p>

<h1>Виды изделий</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_types.each do |product_type| %>
      <tr>
        <td><%= product_type.title %></td>
        <td><%= link_to 'Показать', admin_product_type_path(product_type) %></td>
        <td><%= link_to 'Изменить', edit_admin_product_type_path(product_type) %></td>
        <td><%= link_to 'Удалить', admin_product_type_path(product_type), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'К товарам', admin_products_path, class: 'btn btn-default' %>
<%= link_to 'Добавить вид', new_admin_product_type_path, class: 'btn btn-default' %>
