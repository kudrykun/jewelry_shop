<div class="row">
  <h1 class="panel-heading">Виды изделий</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>
<%= link_to 'В товары', admin_products_path, class: 'btn btn-default' %>
<%= link_to new_admin_product_type_path, class: 'btn btn-success'  do %>
    Добавить вид
    <i class="fa fa-plus"></i>
<% end %>
<br><br>

<div class="panel panel-default">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Название</th>
        <th>Категория</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_types.each do |product_type| %>
        <tr>
          <td><%= product_type.title %></td>
          <td><%= product_type.category.title %></td>
          <td><%= link_to 'Показать', admin_product_type_path(product_type) %></td>
          <td><%= link_to 'Изменить', edit_admin_product_type_path(product_type) %></td>
          <td><%= link_to 'Удалить', admin_product_type_path(product_type), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>