<p id="notice"><%= notice %></p>

<h1>Sale Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Sale percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_sizes.each do |sale_size| %>
      <tr>
        <td><%= sale_size.sale_percent %></td>
        <td><%= link_to 'Show', sale_size %></td>
        <td><%= link_to 'Edit', edit_sale_size_path(sale_size) %></td>
        <td><%= link_to 'Destroy', sale_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale Size', new_sale_size_path %>
