<div class="row">
  <h1 class="panel-heading">Скидки</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>

<%= link_to new_admin_sale_size_path, class: 'btn btn-success'  do %>
    Добавить скидку
    <i class="fa fa-plus"></i>
<% end %>
<br><br>

<div class="panel panel-default">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Скидка</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sale_sizes.each do |sale_size| %>
        <tr>
          <td><%= sale_size.sale_percent %></td>
          <td><%= link_to 'Показать', admin_sale_size_path(sale_size) %></td>
          <td><%= link_to 'Изменить', edit_admin_sale_size_path(sale_size) %></td>
          <td><%= link_to 'Удалить', admin_sale_size_path(sale_size), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
