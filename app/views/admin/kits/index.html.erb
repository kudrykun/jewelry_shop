<div class="row">
  <h1 class="panel-heading">Комплекты</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>

<%= link_to new_admin_kit_path, class: 'btn btn-success'  do %>
    Добавить комплект
    <i class="fa fa-plus"></i>
<% end %>
<br><br>

<div class="panel panel-default">
  <div class="panel-body">
    <table  width="100%" class="table table-striped table-bordered table-hover" id="simpleDataTable">
        <thead>
          <tr>
            <th>Название</th>
            <% @max_cols.times do %>
                <th>Артикул</th>
            <%end%>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @kits.each do |kit| %>
            <tr>
              <td><%= kit.title %></td>
              <% @max_cols.times do |i|%>
                  <%if kit.products[i].nil?%>
                      <td></td>
                  <%else%>
                      <td><%= link_to kit.products[i].artikul, edit_admin_product_path(kit.products[i]) %></td>
                  <%end%>
              <%end%>
              <td><%= link_to 'Показать', admin_kit_path(kit) %></td>
              <td><%= link_to 'Изменить', edit_admin_kit_path(kit) %></td>
              <td><%= link_to 'Удалить', admin_kit_path(kit), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>


