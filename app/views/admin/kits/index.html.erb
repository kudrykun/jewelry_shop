<div class="row">
  <h1 class="panel-heading">Комплекты</h1>
  <p id="notice"><%= notice %></p>
</div>

<%= link_to 'Добавить комплект', new_admin_kit_path, class: 'btn btn-default' %><br><br>

<div class="panel panel-default">
  <div class="panel-heading">
    Таблица комплектов
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table  width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
      <thead>
        <tr>
          <th>Название</th>
          <th>Товаров</th>
          <th colspan="10"></th>
        </tr>
      </thead>

      <tbody>
        <% @kits.each do |kit| %>
          <tr>
            <td><%= kit.title %></td>
            <td><%= @products.where(kit: kit).size %></td>
            <% @products.where(kit: kit).each do |product| %>
                <td><%= product.artikul %></td>
            <% end %>
            <td><%= link_to 'Показать', admin_kit_path(kit) %></td>
            <td><%= link_to 'Изменить', edit_admin_kit_path(kit) %></td>
            <td><%= link_to 'Удалить', admin_kit_path(kit), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>


