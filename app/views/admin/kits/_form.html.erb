<%= form_for([:admin, kit]) do |f| %>
    <% if kit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(kit.errors.count, "error") %> prohibited this kit from being saved:</h2>

          <ul>
            <% kit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title, 'Название' %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :product_ids, 'Товары' %>
      <%= f.collection_select :product_ids, @products, :id, :title, {}, {multiple: true, include_blank: 'Пусто', class: 'form-control'} %>
    </div>

    <div class="actions">
      <%= f.submit 'Применить' %>
    </div>
<% end %>
