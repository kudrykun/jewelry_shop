<%= form_for([:admin, kit]) do |f| %>
    <% if kit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(kit.errors.count, "ошибка", "ошибки") %>: не удалось сохранить:</h2>

          <ul>
            <% kit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div class="row">
  <div class="col-lg-6">

    <div class="form-group">
      <%= f.label :title, 'Название' %>
      <%= f.text_field :title, :placeholder => 'Введите название  ', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :product_ids, 'Товары комплекта' %>
      <%= f.collection_select :product_ids, @products, :id, :artikul, {},
                              {:multiple => '',
                               include_blank: 'Пусто',
                               class: 'selectpicker',
                               :"data-live-search" => 'true',
                               :"data-width" => 'fit',
                               :"data-live-Search-Placeholder" => 'Введите артикул',
                               :"title" => 'Выберете артикулы...'}
      %>
    </div>

      <%= f.submit 'Применить', class: 'btn btn-success mb10 mr10' %>

  </div>
</div>
<% end %>
