<%= form_for([:admin, kit]) do |f| %>
    <% if kit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(kit.errors.count, "error") %> prohibited this kit from being saved:</h2>

          <ul>
            <% kit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div class="row">
  <div class="col-lg-6">

    <div class="form-group">
      <%= f.label :title, 'Название' %>
      <%= f.text_field :title, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.label :product_ids, 'Товары' %>
      <%= f.collection_select :product_ids, @products, :id, :artikul, {}, {:multiple => '', include_blank: 'Пусто', class: 'form-control selectpicker', :"data-live-search" => 'true', :"data-width" => 'fit'} %>
    </div>
    
    <div class="actions">
      <%= f.submit 'Применить', class: 'btn btn-default mb10' %>
    </div>
  </div>
</div>
<% end %>
