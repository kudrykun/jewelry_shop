<%= form_for([:admin,promo], :html => {multipart: true}) do |f| %>
    <% if promo.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(promo.errors.count, "error") %> prohibited this promo from being saved:</h2>

          <ul>
            <% promo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :title, 'Название' %>
          <%= f.text_field :title, :placeholder => 'Введите название  ', class: 'form-control' %>
        </div>

        <div class="field-group">
          <%= f.label :text, 'Текст' %>
          <%= f.text_area :text,{class: 'form-control'} %>
        </div>
      </div>
    </div>

    <div class="row">
      <!--Изображение в списке брендов-->
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :preview, 'Превью акции' %>
          <%= file_field_tag "preview", class: 'form-control' %>
        </div>
        <% if promo.preview %>
            <%= link_to admin_picture_path(promo.preview), method: :delete, :remote => true, :class => 'delete-image' do %>
                Удалить
            <% end %>
            <%= image_tag promo.preview.image, class: 'img-responsive' %>
        <% end %>
      </div>
      <!--Изображение слайдере брендов-->
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :picture, 'Изображение акции' %>
          <%= file_field_tag "picture", class: 'form-control' %>
      </div>
        <% if promo.picture %>
            <%= link_to admin_picture_path(promo.picture), method: :delete, :remote => true, :class => 'delete-image' do %>
                Удалить
            <% end %>
            <%= image_tag promo.picture.image, class: 'img-responsive' %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="actions text-center">
        <%= f.submit 'Применить', class: 'btn btn-success mb10 mr10' %>
      </div>
    </div>


<% end %>
