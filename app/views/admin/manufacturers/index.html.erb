<p id="notice"><%= notice %></p>

<h1>Manufacturers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.title %></td>
        <td><%= link_to 'Show', admin_manufacturer_path(manufacturer) %></td>
        <td><%= link_to 'Edit', edit_admin_manufacturer_path(manufacturer) %></td>
        <td><%= link_to 'Destroy', admin_manufacturer_path(manufacturer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Manufacturer', new_admin_manufacturer_path %>
