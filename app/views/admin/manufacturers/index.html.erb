<div class="row">
  <h1 class="panel-heading">Производители</h1>
  <div id="notice" class="alert alert-success"><%= notice %></div>
</div>
<%= link_to 'В товары', admin_products_path, class: 'btn btn-default' %>
<%= link_to new_admin_manufacturer_path, class: 'btn btn-success'  do %>
    Добавить производителя
    <i class="fa fa-plus"></i>
<% end %>
<br><br>
<div class="panel panel-default">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Фото Банер и Слайд</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @manufacturers.each do |manufacturer| %>
        <tr>
          <td><%= manufacturer.title %></td>
          <td><%= truncate(manufacturer.description, length: 30)  %></td>
          <td>
            <% if manufacturer.index %>
                <i class="fa fa-check" aria-hidden="true"></i>
            <% else %>
                <i class="fa fa-times" aria-hidden="true"></i>
            <%end%>
            <% if manufacturer.slide %>
                <i class="fa fa-check" aria-hidden="true"></i>
            <% else %>
                <i class="fa fa-times" aria-hidden="true"></i>
            <%end%>
          </td>
          <td><%= link_to 'Показать', admin_manufacturer_path(manufacturer) %></td>
          <td><%= link_to 'Изменить', edit_admin_manufacturer_path(manufacturer) %></td>
          <td><%= link_to 'Удалить', admin_manufacturer_path(manufacturer), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


