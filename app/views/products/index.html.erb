<p id="notice"><%= notice %></p>

<h1>Продукты</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Artikul</th>
      <th>Price</th>
      <th>Metal color</th>
      <th>Weight</th>
      <th>Product type</th>
      <th>Sale size</th>
      <th>Old price</th>
      <th>To main page</th>
      <th>Manufacturer</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.artikul %></td>
        <td><%= product.price %></td>
        <td><%= product.metal_color.title %></td>
        <td><%= product.weight %></td>
        <td><%= product.product_type.title %></td>
        <td><%= product.sale_size.sale_percent %> %</td>
        <td><%= product.old_price %></td>
        <td><%= product.to_main_page %></td>
        <td><%= product.manufacturer %></td>
        <td><%= product.priority %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

