<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <%= favicon_link_tag 'elit-logo-2.png', type: 'image/png' %>
  <%= favicon_link_tag 'elit-logo-2.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <meta name="theme-color" content="#c62828">
  <title><%= @product.title %>. Элит Ювелир</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'store/store', media: 'all', 'data-turbolinks-track': 'reload' %>

</head>

<body class="nav-on-left">

<%= render 'layouts/header' %>

<main class="cd-main-content" style="padding:0;">


  <%= yield %>

</main>

<div class="cd-overlay"></div>

<%= render './layouts/renders/basket' %>

<%= render './layouts/renders/footer' %>

<%= javascript_include_tag 'store/store' %>
<%= javascript_include_tag 'store/product/product.js' %>

<script type="text/javascript">
    jQuery(function($){
        $("#phone").mask("+7 (999) 999-9999");
    });
</script>

<script>
    // Change size
    $(function () {
        var $btn = $('#add-to-cart');
        var $btn2 = $('#add-to-cart-one-click');
        $(document).on('change', 'input[name=size].btn_set_size', function () {
            var size = String($(this).val());
            $btn.attr('data-size', size);
            $btn.removeAttr('disabled');
            $btn2.removeAttr('disabled');
            if (typeof appOneShop !== 'undefined') {
                appOneShop.size_filter = size;
            }
            if (typeof appOneOrder !== 'undefined') {
                appOneOrder.size = size;
            }
        });
    });
</script>

<script>
    $('#product_like-slider-1').owlCarousel({
        loop: false,
        margin: 10,
        dots:false,
        responsiveClass: true,
        responsive: {
            0: {
                items: 2,
                nav: true
            },
            600: {
                items: 3,
                nav: true,
                loop: false
            },
            800: {
                items: 4,
                nav: true,
                loop: false
            },
            1280: {
                items: 5,
                nav: true,
                loop: false,
                margin: 20
            }
        }
    });
</script>

<script>

    $(document).ready(function() {
        $('#product-slider').owlCarousel({
            loop:false,
            dots:true,
            margin:0,
            items:1,
            responsive: {
                0: {
                    nav: false
                },
                600: {
                    nav: true
                }
            }
        });
    })

</script>

<script>
    window.sr = ScrollReveal({
        duration: 3000,

        origin: 'bottom',
        reset: false
    });
    sr.reveal('.elit-reveal', {
        viewFactor: 0.1,
        duration: 1000,
        reset: false
    });

</script>

</body>
</html>